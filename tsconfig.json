{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["ES2022", "dom"],
    "types": ["node", "jest"],
    "noImplicitAny": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "src/**/*.spec.ts", "jest.config.ts", "build.ts"]
}
